@{
    ViewData["Title"] = "Home";
}

<div class="text-center py-5">
    <i class="bi bi-graph-up-arrow" style="font-size: 5rem; color: var(--accent-primary);"></i>
    <h1 class="display-4 mt-3 fw-bold">Trading Journal</h1>
    <p class="lead text-muted mb-4">Track, analyze, and improve your trading performance</p>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg px-5 py-3">
            <i class="bi bi-speedometer2 me-2"></i>Go to Dashboard
        </a>
    }
    else
    {
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Auth" asp-action="Register" class="btn btn-primary btn-lg px-4 py-3">
                <i class="bi bi-person-plus me-2"></i>Get Started
            </a>
            <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary btn-lg px-4 py-3">
                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
            </a>
        </div>
    }
</div>

<!-- Features Section -->
<div class="row g-4 mt-5">
    <div class="col-md-4">
        <div class="card h-100 text-center p-4">
            <div class="card-body">
                <i class="bi bi-arrow-left-right" style="font-size: 2.5rem; color: var(--accent-primary);"></i>
                <h4 class="mt-3">Track Trades</h4>
                <p class="text-muted">Log all your BUY and SELL transactions with full details including fees, notes, and multiple accounts.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 text-center p-4">
            <div class="card-body">
                <i class="bi bi-bar-chart-line" style="font-size: 2.5rem; color: var(--accent-success);"></i>
                <h4 class="mt-3">Analyze Performance</h4>
                <p class="text-muted">View detailed statistics including win rate, profit factor, max drawdown, and Kelly criterion.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 text-center p-4">
            <div class="card-body">
                <i class="bi bi-pie-chart" style="font-size: 2.5rem; color: var(--accent-info);"></i>
                <h4 class="mt-3">Portfolio Overview</h4>
                <p class="text-muted">Real-time portfolio tracking with live stock quotes and unrealized P&L calculations.</p>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-2">
    <div class="col-md-4">
        <div class="card h-100 text-center p-4">
            <div class="card-body">
                <i class="bi bi-cash-coin" style="font-size: 2.5rem; color: var(--accent-warning);"></i>
                <h4 class="mt-3">Dividend Tracking</h4>
                <p class="text-muted">Track all dividend income by symbol, with automatic import from broker statements.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 text-center p-4">
            <div class="card-body">
                <i class="bi bi-upload" style="font-size: 2.5rem; color: var(--accent-danger);"></i>
                <h4 class="mt-3">Easy Import</h4>
                <p class="text-muted">Import trades directly from Fidelity CSV exports. More brokers coming soon.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 text-center p-4">
            <div class="card-body">
                <i class="bi bi-bank" style="font-size: 2.5rem; color: #9c27b0;"></i>
                <h4 class="mt-3">Multi-Account</h4>
                <p class="text-muted">Manage multiple brokerage accounts and view combined or individual performance.</p>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-5 pt-4">
    <p class="text-muted">Built with .NET 10.0 | Open Source</p>
</div>
