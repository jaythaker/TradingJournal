@model TradingJournal.Web.Models.CreateTradeDto
@{
    ViewData["Title"] = "New Trade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Trade</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Symbol" class="form-label">Symbol</label>
                <input asp-for="Symbol" class="form-control" required>
            </div>
            <div class="mb-3">
                <label asp-for="Type" class="form-label">Type</label>
                <select asp-for="Type" class="form-select" required>
                    <option value="BUY">BUY</option>
                    <option value="SELL">SELL</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label">Quantity</label>
                <input asp-for="Quantity" type="number" step="0.01" class="form-control" required>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" required>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Fee" class="form-label">Fee</label>
                <input asp-for="Fee" type="number" step="0.01" class="form-control" value="0">
            </div>
            <div class="mb-3">
                <label asp-for="Date" class="form-label">Date</label>
                <input asp-for="Date" type="date" class="form-control" required>
            </div>
            <div class="mb-3">
                <label asp-for="AccountId" class="form-label">Account</label>
                <select asp-for="AccountId" class="form-select" required>
                    <option value="">Select Account</option>
                    @foreach (var account in (List<TradingJournal.Web.Models.AccountDto>)ViewBag.Accounts)
                    {
                        <option value="@account.Id">@account.Name</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Create Trade</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
