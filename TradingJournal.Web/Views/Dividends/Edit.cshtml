@model TradingJournal.Web.Models.CreateDividendDto
@{
    ViewData["Title"] = "Edit Dividend";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i class="bi bi-pencil"></i> Edit Dividend</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@ViewBag.DividendId" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Symbol" class="form-label">Symbol *</label>
                    <input asp-for="Symbol" class="form-control" required style="text-transform: uppercase;" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="AccountId" class="form-label">Account *</label>
                    <select asp-for="AccountId" class="form-select" required>
                        <option value="">Select Account...</option>
                        @foreach (var account in (List<TradingJournal.Web.Models.AccountDto>)ViewBag.Accounts)
                        {
                            <option value="@account.Id" selected="@(Model.AccountId == account.Id)">@account.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Amount" class="form-label">Amount *</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Amount" type="number" step="0.01" class="form-control" required />
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="TaxWithheld" class="form-label">Tax Withheld</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="TaxWithheld" type="number" step="0.01" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Type" class="form-label">Type</label>
                    <select asp-for="Type" class="form-select">
                        <option value="CASH">Cash Dividend</option>
                        <option value="REINVESTED">Reinvested (DRIP)</option>
                        <option value="QUALIFIED">Qualified Dividend</option>
                        <option value="NON_QUALIFIED">Non-Qualified Dividend</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="PaymentDate" class="form-label">Payment Date *</label>
                    <input asp-for="PaymentDate" type="date" class="form-control" required />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="ExDividendDate" class="form-label">Ex-Dividend Date</label>
                    <input asp-for="ExDividendDate" type="date" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="RecordDate" class="form-label">Record Date</label>
                    <input asp-for="RecordDate" type="date" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Quantity" class="form-label">Shares Held (optional)</label>
                    <input asp-for="Quantity" type="number" step="0.0001" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="PerShareAmount" class="form-label">Per Share Amount (optional)</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="PerShareAmount" type="number" step="0.0001" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Update Dividend
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
