@{
    ViewData["Title"] = "Import Trades";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var accounts = ViewBag.Accounts as List<TradingJournal.Web.Models.AccountDto> ?? new List<TradingJournal.Web.Models.AccountDto>();
    var formats = ViewBag.Formats as List<TradingJournal.Web.Controllers.ImportFormatDto> ?? new List<TradingJournal.Web.Controllers.ImportFormatDto>();
}

<h1>Import Trades</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        @if (TempData["Warnings"] != null)
        {
            <br/><small class="text-muted">Warnings: @TempData["Warnings"]</small>
        }
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-upload"></i> Upload CSV File</h5>
            </div>
            <div class="card-body">
                <form asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="accountId" class="form-label">Account *</label>
                        <select name="accountId" id="accountId" class="form-select" required>
                            <option value="">Select Account</option>
                            @foreach (var account in accounts)
                            {
                                <option value="@account.Id">@account.Name (@account.Currency)</option>
                            }
                        </select>
                        <div class="form-text">Select the account to import trades into.</div>
                    </div>

                    <div class="mb-3">
                        <label for="format" class="form-label">Import Format</label>
                        <select name="format" id="format" class="form-select">
                            <option value="">Auto-detect</option>
                            @foreach (var fmt in formats)
                            {
                                <option value="@fmt.Name">@fmt.Name - @fmt.Description</option>
                            }
                        </select>
                        <div class="form-text">Leave as "Auto-detect" to automatically detect the CSV format.</div>
                    </div>

                    <div class="mb-3">
                        <label for="file" class="form-label">CSV File *</label>
                        <input type="file" name="file" id="file" class="form-control" accept=".csv" required>
                        <div class="form-text">Select a CSV file to import.</div>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-upload"></i> Import Trades
                    </button>
                    <a asp-controller="Trades" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-info-circle"></i> Supported Formats</h5>
            </div>
            <div class="card-body">
                <h6>Fidelity</h6>
                <p class="text-muted">
                    Export your trade history from Fidelity's website:
                    <ol class="small">
                        <li>Log in to Fidelity.com</li>
                        <li>Go to Accounts â†’ Trade History</li>
                        <li>Click "Download" and select CSV format</li>
                        <li>Upload the downloaded file here</li>
                    </ol>
                </p>

                <hr>

                <h6>Generic CSV</h6>
                <p class="text-muted">
                    Create a CSV file with the following columns:
                </p>
                <code class="small">Symbol,Type,Quantity,Price,Fee,Date,Notes</code>
                <p class="text-muted mt-2 small">
                    <strong>Required:</strong> Symbol, Quantity, Price<br>
                    <strong>Optional:</strong> Type (BUY/SELL), Fee, Date, Notes
                </p>
            </div>
        </div>

        @if (!accounts.Any())
        {
            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>No accounts found.</strong> 
                <a asp-controller="Accounts" asp-action="Create">Create an account</a> before importing trades.
            </div>
        }
    </div>
</div>
