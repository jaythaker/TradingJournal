@model List<TradingJournal.Web.Models.TradeDto>
@{
    ViewData["Title"] = "Options Trades";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var accounts = ViewBag.Accounts as List<TradingJournal.Web.Models.AccountDto> ?? new List<TradingJournal.Web.Models.AccountDto>();
    var underlyingSymbols = ViewBag.UnderlyingSymbols as List<string> ?? new List<string>();
    var selectedAccountId = ViewBag.SelectedAccountId as string;
    var selectedUnderlying = ViewBag.Underlying as string;
    var startDate = ViewBag.StartDate as DateTime?;
    var endDate = ViewBag.EndDate as DateTime?;
    
    // Group trades by spread
    var spreadGroups = Model.Where(t => !string.IsNullOrEmpty(t.SpreadGroupId))
        .GroupBy(t => t.SpreadGroupId)
        .ToDictionary(g => g.Key!, g => g.OrderBy(t => t.SpreadLegNumber).ToList());
    var singleTrades = Model.Where(t => string.IsNullOrEmpty(t.SpreadGroupId)).ToList();
    
    // Calculate statistics
    var openingTrades = Model.Where(t => t.IsOpeningTrade == true).ToList();
    var closingTrades = Model.Where(t => t.IsOpeningTrade == false).ToList();
    
    double totalPremiumReceived = Model
        .Where(t => t.Type.Contains("SELL"))
        .Sum(t => t.Price * t.Quantity * t.ContractMultiplier);
    double totalPremiumPaid = Model
        .Where(t => t.Type.Contains("BUY"))
        .Sum(t => t.Price * t.Quantity * t.ContractMultiplier);
    double netPremium = totalPremiumReceived - totalPremiumPaid;
    
    var callTrades = Model.Where(t => t.OptionType == "Call").ToList();
    var putTrades = Model.Where(t => t.OptionType == "Put").ToList();
    
    // Strategy breakdown
    var strategyBreakdown = spreadGroups
        .GroupBy(g => g.Value.First().SpreadType)
        .Select(g => new { 
            Strategy = g.Key, 
            Count = g.Count(),
            TotalPremium = g.Sum(s => s.Value.Where(t => t.Type.Contains("SELL")).Sum(t => t.Price * t.Quantity * t.ContractMultiplier) -
                                       s.Value.Where(t => t.Type.Contains("BUY")).Sum(t => t.Price * t.Quantity * t.ContractMultiplier))
        })
        .OrderByDescending(x => x.Count)
        .ToList();
    
    // Group by underlying
    var byUnderlying = Model.Where(t => !string.IsNullOrEmpty(t.UnderlyingSymbol))
        .GroupBy(t => t.UnderlyingSymbol!)
        .Select(g => new {
            Symbol = g.Key,
            TradeCount = g.Count(),
            SpreadCount = g.Where(t => !string.IsNullOrEmpty(t.SpreadGroupId)).Select(t => t.SpreadGroupId).Distinct().Count(),
            Premium = g.Where(t => t.Type.Contains("SELL")).Sum(t => t.Price * t.Quantity * t.ContractMultiplier) -
                      g.Where(t => t.Type.Contains("BUY")).Sum(t => t.Price * t.Quantity * t.ContractMultiplier)
        })
        .OrderByDescending(x => Math.Abs(x.Premium))
        .Take(10)
        .ToList();
    
    // Expiring soon (within 30 days)
    var expiringSoon = Model.Where(t => t.ExpirationDate.HasValue && 
        t.ExpirationDate.Value > DateTime.Today &&
        t.ExpirationDate.Value <= DateTime.Today.AddDays(30))
        .OrderBy(t => t.ExpirationDate)
        .ToList();
    
    // Opening vs closing spreads
    var openingSpreads = spreadGroups.Where(g => g.Value.First().IsOpeningTrade == true).ToList();
    var closingSpreads = spreadGroups.Where(g => g.Value.First().IsOpeningTrade == false).ToList();
    
    // Helper function for strategy badge color
    string GetStrategyBadgeClass(string spreadType) => spreadType switch
    {
        "CreditSpread" => "bg-success",
        "DebitSpread" => "bg-danger",
        "IronCondor" => "bg-primary",
        "Straddle" => "bg-warning text-dark",
        "Strangle" => "bg-warning text-dark",
        "Butterfly" => "bg-info",
        "Calendar" => "bg-secondary",
        "Custom" => "bg-dark",
        _ => "bg-secondary"
    };
    
    string GetStrategyDisplayName(string spreadType) => spreadType switch
    {
        "CreditSpread" => "Credit Spread",
        "DebitSpread" => "Debit Spread",
        "IronCondor" => "Iron Condor",
        "Straddle" => "Straddle",
        "Strangle" => "Strangle",
        "Butterfly" => "Butterfly",
        "Calendar" => "Calendar",
        "Custom" => "Custom",
        "Single" => "Single Leg",
        _ => spreadType
    };
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="bi bi-lightning text-warning"></i> Options Dashboard</h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary me-2">
            <i class="bi bi-list"></i> All Trades
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Trade
        </a>
    </div>
</div>

<!-- Main Statistics Row -->
<div class="row mb-4">
    <div class="col-md-2">
        <div class="card bg-warning bg-opacity-10 border-warning">
            <div class="card-body text-center py-2">
                <h6 class="card-title text-muted mb-1">Total Trades</h6>
                <h3 class="text-warning mb-0">@Model.Count</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card">
            <div class="card-body text-center py-2">
                <h6 class="card-title text-muted mb-1">Strategies</h6>
                <h3 class="text-info mb-0">@spreadGroups.Count</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card">
            <div class="card-body text-center py-2">
                <h6 class="card-title text-muted mb-1">Calls / Puts</h6>
                <h3 class="mb-0"><span class="text-primary">@callTrades.Count</span> / <span class="text-info">@putTrades.Count</span></h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card">
            <div class="card-body text-center py-2">
                <h6 class="card-title text-muted mb-1">Open / Close</h6>
                <h3 class="mb-0"><span class="text-success">@openingSpreads.Count</span> / <span class="text-danger">@closingSpreads.Count</span></h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card @(netPremium >= 0 ? "bg-success bg-opacity-10 border-success" : "bg-danger bg-opacity-10 border-danger")">
            <div class="card-body text-center py-2">
                <h6 class="card-title text-muted mb-1">Net Premium</h6>
                <h3 class="@(netPremium >= 0 ? "text-success" : "text-danger") mb-0">
                    @(netPremium >= 0 ? "+" : "")$@netPremium.ToString("N0")
                </h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card @(expiringSoon.Any() ? "bg-warning bg-opacity-25 border-warning" : "")">
            <div class="card-body text-center py-2">
                <h6 class="card-title text-muted mb-1">Expiring Soon</h6>
                <h3 class="@(expiringSoon.Any() ? "text-warning" : "") mb-0">@expiringSoon.Count</h3>
            </div>
        </div>
    </div>
</div>

<!-- Strategy Breakdown Row -->
@if (strategyBreakdown.Any())
{
    <div class="card mb-4">
        <div class="card-header py-2">
            <h6 class="mb-0"><i class="bi bi-pie-chart-fill"></i> Strategy Breakdown</h6>
        </div>
        <div class="card-body py-2">
            <div class="d-flex flex-wrap gap-3">
                @foreach (var strategy in strategyBreakdown)
                {
                    <div class="d-flex align-items-center">
                        <span class="badge @GetStrategyBadgeClass(strategy.Strategy) me-2" style="font-size: 0.9rem;">
                            @GetStrategyDisplayName(strategy.Strategy)
                        </span>
                        <span class="fw-bold me-2">@strategy.Count</span>
                        <span class="@(strategy.TotalPremium >= 0 ? "text-success" : "text-danger")">
                            @(strategy.TotalPremium >= 0 ? "+" : "")$@strategy.TotalPremium.ToString("N0")
                        </span>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body py-2">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-md-2">
                <label class="form-label small mb-1">Account</label>
                <select name="accountId" class="form-select form-select-sm">
                    <option value="">All Accounts</option>
                    @foreach (var account in accounts)
                    {
                        <option value="@account.Id" selected="@(selectedAccountId == account.Id)">@account.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label small mb-1">Underlying</label>
                <select name="underlying" class="form-select form-select-sm">
                    <option value="">All Underlyings</option>
                    @foreach (var symbol in underlyingSymbols)
                    {
                        <option value="@symbol" selected="@(selectedUnderlying == symbol)">@symbol</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label small mb-1">Start Date</label>
                <input type="date" name="startDate" class="form-control form-control-sm" value="@(startDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-md-2">
                <label class="form-label small mb-1">End Date</label>
                <input type="date" name="endDate" class="form-control form-control-sm" value="@(endDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-sm me-2"><i class="bi bi-filter"></i> Apply</button>
                <a href="@Url.Action("Options")" class="btn btn-outline-secondary btn-sm"><i class="bi bi-x-circle"></i> Clear</a>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <!-- Main content -->
    <div class="col-md-8">
        <!-- Spreads Section -->
        @if (spreadGroups.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-dark text-white py-2">
                    <h5 class="mb-0"><i class="bi bi-layers"></i> Option Strategies (@spreadGroups.Count)</h5>
                </div>
                <div class="card-body p-0">
                    <div class="accordion" id="spreadAccordion">
                        @{int spreadIndex = 0;}
                        @foreach (var spread in spreadGroups.OrderByDescending(s => s.Value.First().Date))
                        {
                            var legs = spread.Value;
                            var firstLeg = legs.First();
                            var spreadType = firstLeg.SpreadType;
                            var underlying = firstLeg.UnderlyingSymbol ?? "Unknown";
                            var expiration = firstLeg.ExpirationDate?.ToString("MM/dd/yy") ?? "";
                            var tradeDate = firstLeg.Date.ToString("MM/dd/yy");
                            var isOpening = firstLeg.IsOpeningTrade == true;
                            var netSpreadPremium = legs.Where(t => t.Type.Contains("SELL")).Sum(t => t.Price * t.Quantity * t.ContractMultiplier) -
                                                   legs.Where(t => t.Type.Contains("BUY")).Sum(t => t.Price * t.Quantity * t.ContractMultiplier);
                            
                            // Calculate strike range
                            var strikes = legs.Select(l => l.StrikePrice ?? 0).OrderBy(s => s).ToList();
                            var strikeRange = strikes.Count > 1 ? $"${strikes.First():N0} - ${strikes.Last():N0}" : $"${strikes.First():N0}";
                            
                            // Determine strategy name from notes if available
                            var strategyName = GetStrategyDisplayName(spreadType);
                            var notesMatch = System.Text.RegularExpressions.Regex.Match(firstLeg.Notes ?? "", @"Strategy:\s*([^(]+)");
                            if (notesMatch.Success)
                                strategyName = notesMatch.Groups[1].Value.Trim();
                            
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed py-2" type="button" data-bs-toggle="collapse" data-bs-target="#spread-@spreadIndex">
                                        <div class="d-flex align-items-center w-100">
                                            <span class="badge @GetStrategyBadgeClass(spreadType) me-2">@strategyName</span>
                                            <strong class="me-2">@underlying</strong>
                                            <span class="badge bg-light text-dark me-2">@strikeRange</span>
                                            <span class="text-muted me-2">@tradeDate</span>
                                            <span class="badge @(isOpening ? "bg-success" : "bg-danger") me-2">@(isOpening ? "OPEN" : "CLOSE")</span>
                                            <span class="text-muted me-auto">Exp: @expiration</span>
                                            <span class="badge @(legs.Count > 2 ? "bg-info" : "bg-secondary") me-2">@legs.Count-leg</span>
                                            <span class="fw-bold @(netSpreadPremium >= 0 ? "text-success" : "text-danger")">
                                                @(netSpreadPremium >= 0 ? "+" : "")$@netSpreadPremium.ToString("N2")
                                            </span>
                                        </div>
                                    </button>
                                </h2>
                                <div id="spread-@spreadIndex" class="accordion-collapse collapse" data-bs-parent="#spreadAccordion">
                                    <div class="accordion-body p-0">
                                        <table class="table table-sm mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th style="width: 50px">Leg</th>
                                                    <th>Action</th>
                                                    <th>Strike</th>
                                                    <th>Type</th>
                                                    <th class="text-end">Qty</th>
                                                    <th class="text-end">Price</th>
                                                    <th class="text-end">Premium</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var leg in legs)
                                                {
                                                    var legPremium = leg.Price * leg.Quantity * leg.ContractMultiplier;
                                                    var isSell = leg.Type.Contains("SELL");
                                                    <tr>
                                                        <td><span class="badge bg-secondary">@leg.SpreadLegNumber</span></td>
                                                        <td>
                                                            <span class="badge @(isSell ? "bg-danger" : "bg-success")">
                                                                @(isSell ? "SELL" : "BUY")
                                                            </span>
                                                        </td>
                                                        <td class="text-primary fw-bold">$@leg.StrikePrice?.ToString("N0")</td>
                                                        <td>
                                                            <span class="badge @(leg.OptionType == "Call" ? "bg-primary" : "bg-info")">
                                                                @(leg.OptionType == "Call" ? "CALL" : "PUT")
                                                            </span>
                                                        </td>
                                                        <td class="text-end">@leg.Quantity</td>
                                                        <td class="text-end">$@leg.Price.ToString("N2")</td>
                                                        <td class="text-end fw-bold @(isSell ? "text-success" : "text-danger")">
                                                            @(isSell ? "+" : "-")$@legPremium.ToString("N2")
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                            <tfoot class="table-light">
                                                <tr class="fw-bold">
                                                    <td colspan="6" class="text-end">Net Premium:</td>
                                                    <td class="text-end @(netSpreadPremium >= 0 ? "text-success" : "text-danger")">
                                                        @(netSpreadPremium >= 0 ? "+" : "")$@netSpreadPremium.ToString("N2")
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            spreadIndex++;
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Single Trades Section -->
        @if (singleTrades.Any())
        {
            <div class="card mb-4">
                <div class="card-header py-2">
                    <h5 class="mb-0"><i class="bi bi-card-list"></i> Single Leg Trades (@singleTrades.Count)</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped table-sm mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Date</th>
                                <th>Underlying</th>
                                <th>Strike</th>
                                <th>Type</th>
                                <th>Exp</th>
                                <th class="text-end">Qty</th>
                                <th class="text-end">Price</th>
                                <th class="text-end">Premium</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trade in singleTrades.OrderByDescending(t => t.Date))
                            {
                                var premium = trade.Price * trade.Quantity * trade.ContractMultiplier;
                                var isSell = trade.Type.Contains("SELL");
                                <tr>
                                    <td>@trade.Date.ToString("MM/dd/yy")</td>
                                    <td><strong>@trade.UnderlyingSymbol</strong></td>
                                    <td class="text-primary">$@trade.StrikePrice?.ToString("N0")</td>
                                    <td>
                                        <span class="badge @(isSell ? "bg-danger" : "bg-success") badge-sm">@(isSell ? "SELL" : "BUY")</span>
                                        <span class="badge @(trade.OptionType == "Call" ? "bg-primary" : "bg-info") badge-sm">@(trade.OptionType == "Call" ? "C" : "P")</span>
                                    </td>
                                    <td>@trade.ExpirationDate?.ToString("MM/dd/yy")</td>
                                    <td class="text-end">@trade.Quantity</td>
                                    <td class="text-end">$@trade.Price.ToString("N2")</td>
                                    <td class="text-end @(isSell ? "text-success" : "text-danger")">
                                        @(isSell ? "+" : "-")$@premium.ToString("N2")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
    
    <!-- Sidebar -->
    <div class="col-md-4">
        <!-- By Underlying -->
        @if (byUnderlying.Any())
        {
            <div class="card mb-4">
                <div class="card-header py-2">
                    <h6 class="mb-0"><i class="bi bi-bar-chart"></i> By Underlying</h6>
                </div>
                <div class="card-body p-0">
                    <table class="table table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Symbol</th>
                                <th class="text-center">Trades</th>
                                <th class="text-center">Strat</th>
                                <th class="text-end">P&L</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in byUnderlying)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("Options", new { underlying = item.Symbol, startDate = startDate, endDate = endDate })">
                                            <strong>@item.Symbol</strong>
                                        </a>
                                    </td>
                                    <td class="text-center">@item.TradeCount</td>
                                    <td class="text-center"><span class="badge bg-info">@item.SpreadCount</span></td>
                                    <td class="text-end @(item.Premium >= 0 ? "text-success" : "text-danger")">
                                        @(item.Premium >= 0 ? "+" : "")$@item.Premium.ToString("N0")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        
        <!-- Expiring Soon -->
        @if (expiringSoon.Any())
        {
            <div class="card mb-4 border-warning">
                <div class="card-header bg-warning text-dark py-2">
                    <h6 class="mb-0"><i class="bi bi-clock-history"></i> Expiring Within 30 Days</h6>
                </div>
                <div class="card-body p-0">
                    <table class="table table-sm mb-0">
                        <tbody>
                            @foreach (var trade in expiringSoon.Take(10))
                            {
                                var daysToExp = (trade.ExpirationDate!.Value - DateTime.Today).Days;
                                <tr>
                                    <td>
                                        <strong>@trade.UnderlyingSymbol</strong>
                                        <span class="text-muted">$@trade.StrikePrice?.ToString("N0")@(trade.OptionType == "Call" ? "C" : "P")</span>
                                    </td>
                                    <td class="text-end">
                                        <span class="badge @(daysToExp <= 7 ? "bg-danger" : daysToExp <= 14 ? "bg-warning text-dark" : "bg-secondary")">
                                            @daysToExp days
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        
        <!-- Premium Summary -->
        <div class="card mb-4">
            <div class="card-header py-2">
                <h6 class="mb-0"><i class="bi bi-cash-stack"></i> Premium Summary</h6>
            </div>
            <div class="card-body py-2">
                <table class="table table-sm mb-0">
                    <tr>
                        <td>Premium Collected</td>
                        <td class="text-end text-success fw-bold">+$@totalPremiumReceived.ToString("N2")</td>
                    </tr>
                    <tr>
                        <td>Premium Paid</td>
                        <td class="text-end text-danger fw-bold">-$@totalPremiumPaid.ToString("N2")</td>
                    </tr>
                    <tr class="table-active">
                        <td class="fw-bold">Net Premium</td>
                        <td class="text-end fw-bold @(netPremium >= 0 ? "text-success" : "text-danger")">
                            @(netPremium >= 0 ? "+" : "")$@netPremium.ToString("N2")
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        
        <!-- Trade Type Breakdown -->
        <div class="card mb-4">
            <div class="card-header py-2">
                <h6 class="mb-0"><i class="bi bi-diagram-3"></i> Trade Actions</h6>
            </div>
            <div class="card-body py-2">
                @{
                    var actionGroups = new[] {
                        ("BUY_TO_OPEN", Model.Count(t => t.Type == "BUY_TO_OPEN"), "bg-success"),
                        ("SELL_TO_OPEN", Model.Count(t => t.Type == "SELL_TO_OPEN"), "bg-warning text-dark"),
                        ("BUY_TO_CLOSE", Model.Count(t => t.Type == "BUY_TO_CLOSE"), "bg-info"),
                        ("SELL_TO_CLOSE", Model.Count(t => t.Type == "SELL_TO_CLOSE"), "bg-danger")
                    }.Where(x => x.Item2 > 0).ToList();
                }
                @foreach (var action in actionGroups)
                {
                    var percentage = Model.Count > 0 ? (double)action.Item2 / Model.Count * 100 : 0;
                    <div class="mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge @action.Item3" style="font-size: 0.75rem;">@action.Item1.Replace("_", " ")</span>
                            <span class="small">@action.Item2 (@percentage.ToString("N0")%)</span>
                        </div>
                        <div class="progress" style="height: 4px;">
                            <div class="progress-bar @action.Item3.Replace(" text-dark", "")" style="width: @percentage%"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No options trades found. 
        <a asp-action="Index">View all trades</a> or import trades with options.
    </div>
}

<style>
    .accordion-button:not(.collapsed) {
        background-color: #f8f9fa;
    }
    .badge-sm {
        font-size: 0.7rem;
        padding: 0.2em 0.4em;
    }
</style>
